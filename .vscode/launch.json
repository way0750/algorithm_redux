{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug TS File: see https://medium.com/@dupski/debug-typescript-in-vs-code-without-compiling-using-ts-node-9d1f4f9a94a",
            "type": "node",
            "request": "launch",
            "args": [
                "${relativeFile}"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
        },
        {
            "name": "debug with node",
            "type": "node",
            "request": "launch",
            "program": "${file}",
            "sourceMaps": true
        },
        {
            "name": "MochaJS",
            "runtimeExecutable": "${workspaceRoot}/node_modules/ts-mocha/bin/ts-mocha",
            "runtimeArgs": [
                "${relativeFile}",
                "--colors",
                "--require",
                "${workspaceRoot}/testing/bootstrap"
            ],
            "type": "node",
            "request": "launch",
            "sourceMaps": true
        }
    ]
}