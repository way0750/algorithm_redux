{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "MochaJS",
            "runtimeExecutable": "${workspaceRoot}/node_modules/ts-mocha/bin/ts-mocha",
            "runtimeArgs": [
                "${relativeFile}",
                "--colors",
                "--require",
                "${workspaceRoot}/testing/bootstrap"
            ],
            "type": "node",
            "request": "launch",
            "sourceMaps": true
        }
    ]
}